<%= render 'layouts/top_nav' %>

<div class="columns">
  <!--<div class="column is-1"></div>-->
  <div class="column practice-form-main">
    </br>
    <h1 class="title is-2">My Practice Schedule</h1>
    <h4 class="title is-4">Create a regular practice schedule for your team</h4>
    </br>
    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>Day</th>
          <th>Start Time</th>
          <th>Duration (hrs)</th>
          <th>Street</th>
          <th>City</th>
          <th>Zipcode</th>
          <th>
            <a class="tooltips">End Date
              <i class="fa fa-info-circle" aria-hidden="true"></i>
              <span>If this practice happens every week, this is the date the last practice occurs. Otherwise only one practice is saved</span>
            </a>

          </th>
        </tr>
      </thead>
      <tbody>
        <%= form_tag coach_practices_path do %>

            <%= render 'practice_form', index: 0 %>
          <tr>
            <td colspan="12"><%= submit_tag "Submit", class: "button is-success is-medium is-pulled-right" %></td>
            <td colspan="12"><%= submit_tag "Add", class: "button is-success is-medium is-pulled-right" %></td>
          </tr>
        <% end %>
      </tbody>

    </table>
  </div>
</div>
